{
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true,
    "assets": ["main.js", "styles.css", "manifest.json"]
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "manifest.json",
      "out": "manifest.json",
      "key": "version"
    }
  }
}
